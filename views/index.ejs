<h2>Homepage</h2>

<img id="banner" src="http://<%=root%>/assets/banner.png" width="100%" height="200px">


<div>
    <form action="/new/" method="post" name="gblog" autocomplete="off">
        <input type="text" name="newBlog" placeholder="Tell the world!">
        <label for="topic">Topic</label><br>
        <input type="text" name="topic" placeholder="be cool">
        <button type="submit">post</button>
    </form>
</div>
<div>
    <p>for future links to showcase projects</p>
</div>
    <h3>Global Wall</h3>
    <div id="gblog">
        <% messages.forEach(msg => { %>
            <div class="posts" style="border: dotted;">
                <p><%= msg.content %></p><br>
                <small>Topic: <%= msg.topic %> </small><br>
                <p><small>By: <%= name %> </small></p>
            
             <button class="edit"><a href="/edit/global/<%= msg.id %>">Edit</a></button>
             <button class="delete"><a href="/delete/global/<%= msg.id %>">Delete</a></button>
    </div><br>
           
    
        <% }) %> 