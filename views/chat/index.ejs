<main class="chatBox">
    <header>
      <h1>MyChat</h1>
    </header>

    <h3>hello <%= name %> </h3>
   
  
    <section class="chat">
      <% let chat = messages.reverse() %> 
      <% messages.forEach(message => { %>
          <p><strong><%= message.user.name %>: </strong><%= message.content %> </p>
      <% }) %> 
      <!-- <p><strong>Tommy</strong>: I did not hit her!</p>
      <p><strong>Mark</strong>: ...</p>
      <p><strong>Tommy</strong>: I did not! it's bullshit!</p>
      <p><strong>Tommy</strong>: oh! hi Mark!</p> -->
    </section>
  
    <form method="POST" name="chat" action="./chat/send" autocomplete="off">
      
      <button onclick="toggleEmojiDrawer()">Emojis</button>
      <input type="text" placeholder="Write a message" name="chat" id="input" class="chatInputs"/>
<div id="drawer" class="emoji-drawer hidden"> 
  <% emoji.forEach(emo => { %>
    <div class="emoji" onclick="addEmoji(this.innerHTML)" name="<%=emo.slug %>"><%= emo.character %> </div>
<% }) %> 
</div>


      <button type="submit" class="chatInputs button">Send</button>
    </form>
  </main>